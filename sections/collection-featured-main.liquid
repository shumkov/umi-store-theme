{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- assign target_collection = section.settings.collection -%}
{%- assign is_editor = request.design_mode -%}
{%- assign show_filters_ui = false -%}
{%- if is_editor and target_collection != blank -%}
  {%- assign show_filters_ui = true -%}
{%- endif -%}
{%- assign filters_visible = 'false' -%}
{%- if show_filters_ui -%}
  {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
    {%- assign filters_visible = 'true' -%}
  {%- endif -%}
{%- endif -%}
{%- if filters_visible == 'true' -%}
  {{ 'component-facets.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {% if target_collection == blank %}
    <div class="collection page-width" data-id="{{ section.id }}">
      <div class="title-wrapper center">
        <h2 class="title title--primary">Add a collection</h2>
        <p class="body">Choose a collection to show its products here.</p>
      </div>
      <ul
        class="grid product-grid grid--2-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for i in (1..section.settings.columns_desktop) -%}
          <li class="grid__item">
            {% liquid
              assign ridx = forloop.rindex
              case ridx
                when 5
                  assign ridx = 1
                when 6
                  assign ridx = 2
              endcase
            %}
            {%- assign placeholder_image = 'product-apparel-' | append: ridx -%}
            {% render 'card-product',
              show_vendor: section.settings.show_vendor,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              placeholder_image: placeholder_image
            %}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  {% else %}
    {% if filters_visible == 'true' %}
      <div class="page-width">
        <p class="rte"><em>Filters only update products while editing. They remain hidden on your storefront.</em></p>
      </div>
    {% endif %}

    {%- paginate target_collection.products by section.settings.products_per_page -%}
      {%- assign add_page_width_class = 'true' -%}
      {%- if filters_visible == 'true' and section.settings.filter_type == 'vertical' -%}
        {%- assign add_page_width_class = 'false' -%}
      {%- endif -%}

      <div{% if filters_visible == 'true' and section.settings.filter_type == 'vertical' %} class="facets-vertical page-width"{% endif %}>
        {%- if filters_visible == 'true' -%}
          <aside
            aria-labelledby="verticalTitle"
            class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}"
            id="main-collection-filters-{{ section.id }}"
            data-id="{{ section.id }}"
          >
            {% render 'facets',
              results: target_collection,
              enable_filtering: section.settings.enable_filtering,
              enable_sorting: section.settings.enable_sorting,
              filter_type: section.settings.filter_type,
              paginate: paginate
            %}
          </aside>
        {%- endif -%}

        <div
          class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          id="ProductGridContainer"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
          {% endif %}
        >
          {%- if paginate.items_count == 0 -%}
            <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
              <div class="loading-overlay gradient"></div>
              <div class="title-wrapper center">
                <h2 class="title title--primary">
                  {{ 'sections.collection_template.empty' | t -}}
                  <br>
                  {{
                    'sections.collection_template.use_fewer_filters_html'
                    | t: link: target_collection.url, class: 'underlined-link link'
                  }}
                </h2>
              </div>
            </div>
          {%- else -%}
            <div class="collection{% if add_page_width_class == 'true' %} page-width{% endif %}">
              <div class="loading-overlay gradient"></div>
              <ul
                id="product-grid"
                data-id="{{ section.id }}"
                class="
                  grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                  grid--{{ section.settings.columns_desktop }}-col-desktop
                  {% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}
                "
              >
                {% assign skip_card_product_styles = false %}
                {%- for product in paginate.items -%}
                  {% assign lazy_load = false %}
                  {%- if forloop.index > 2 -%}
                    {%- assign lazy_load = true -%}
                  {%- endif -%}
                  {%- assign color_filter_params_str = '' -%}
                  {%- if section.settings.enable_filtering and target_collection.filters -%}
                    {%- for filter in target_collection.filters -%}
                      {%- if filter.param_name == 'filter.v.t.shopify.color-pattern' and filter.active_values.size > 0 -%}
                        {%- assign color_filter_params_str = color_filter_params_str
                          | append: filter
                          | json
                          | append: '||'
                        -%}
                      {%- endif -%}
                    {%- endfor -%}
                  {%- endif -%}
                  {%- assign color_filter_params = color_filter_params_str | split: '||' -%}
                  {% render 'color-variant',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    lazy_load: lazy_load,
                    skip_styles: skip_card_product_styles,
                    quick_add: section.settings.quick_add,
                    section_id: section.id,
                    color_filter_params: color_filter_params
                  %}
                  {%- assign skip_card_product_styles = true -%}
                {%- endfor -%}
              </ul>

              {%- if paginate.pages > 1 -%}
                {% render 'pagination', paginate: paginate, anchor: '' %}
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endpaginate -%}
  {% endif %}
  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Collection grid hidden",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 36,
      "step": 4,
      "default": 16,
      "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
    },
    {
