{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- assign collection_setting = section.settings.collection -%}
{%- assign target_collection = blank -%}
{%- assign collection_handle = '' -%}
{%- if collection_setting != blank -%}
  {%- if collection_setting.handle -%}
    {%- assign collection_handle = collection_setting.handle -%}
  {%- else -%}
    {%- assign collection_handle = collection_setting -%}
  {%- endif -%}
  {%- if collection_handle != '' and collections[collection_handle] != blank -%}
    {%- assign target_collection = collections[collection_handle] -%}
  {%- else -%}
    {%- assign target_collection = collection_setting -%}
  {%- endif -%}
{%- endif -%}
{%- assign is_editor = request.design_mode -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {% if target_collection == blank %}
    <div class="collection page-width" data-id="{{ section.id }}">
      <div class="title-wrapper center">
        <h2 class="title title--primary">Add a collection</h2>
        <p class="body">Choose a collection to show its products here.</p>
      </div>
      <ul
        class="grid product-grid grid--2-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}"
      >
        {%- for i in (1..section.settings.columns_desktop) -%}
          <li class="grid__item">
            {% liquid
              assign ridx = forloop.rindex
              case ridx
                when 5
                  assign ridx = 1
                when 6
                  assign ridx = 2
              endcase
            %}
            {%- assign placeholder_image = 'product-apparel-' | append: ridx -%}
            {% render 'card-product',
              show_vendor: section.settings.show_vendor,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              placeholder_image: placeholder_image
            %}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  {% elsif is_editor %}
    <div class="collection collection--preview page-width" id="CollectionPreview-{{ section.id }}">
      <div class="loading-overlay gradient"></div>
    </div>
    <script>
      (function () {
        const container = document.getElementById('CollectionPreview-{{ section.id }}');
        if (!container || container.dataset.loaded === 'true') return;
        container.dataset.loaded = 'true';
        const collectionUrl = {{ target_collection.url | json }};
        if (!collectionUrl) {
          container.innerHTML = '<p class="rte">Select a collection to preview filters.</p>';
          return;
        }
        let previewParams = '';
        try {
          const search = window.location.search;
          if (search && search.indexOf('preview_theme_id=') !== -1) {
            previewParams = '&' + search.replace(/^\?/, '');
          }
        } catch (error) {
          previewParams = '';
        }
        const requestUrl = collectionUrl + '?section_id=main-collection-product-grid' + previewParams;
        fetch(requestUrl, { credentials: 'include' })
          .then(function (response) {
            if (!response.ok) throw response;
            return response.text();
          })
          .then(function (html) {
            container.innerHTML = html;
            if (!window.__collectionPreviewAssetsLoaded) {
              window.__collectionPreviewAssetsLoaded = true;
              var cssLinks = [
                {{ 'component-facets.css' | asset_url | json }},
                {{ 'component-show-more.css' | asset_url | json }},
                {{ 'component-swatch.css' | asset_url | json }},
                {{ 'component-swatch-input.css' | asset_url | json }},
                {{ 'component-card.css' | asset_url | json }},
                {{ 'component-price.css' | asset_url | json }},
                {{ 'template-collection.css' | asset_url | json }}
              ];
              cssLinks.forEach(function (href) {
                if (!document.querySelector('link[href="' + href + '"]')) {
                  var link = document.createElement('link');
                  link.rel = 'stylesheet';
                  link.href = href;
                  document.head.appendChild(link);
                }
              });
              var scriptSrc = {{ 'facets.js' | asset_url | json }};
              if (!document.querySelector('script[src="' + scriptSrc + '"]')) {
                var script = document.createElement('script');
                script.src = scriptSrc;
                script.defer = true;
                document.head.appendChild(script);
              }
            }

            var parser = new DOMParser();
            var parsed = parser.parseFromString(html, 'text/html');
            parsed.querySelectorAll('script').forEach(function (script) {
              var newScript = document.createElement('script');
              if (script.type) newScript.type = script.type;
              if (script.src) {
                var src = script.src;
                if (src.indexOf('preview_theme_id=') === -1 && previewParams) {
                  var joiner = src.indexOf('?') === -1 ? '?' : '&';
                  src += joiner + previewParams.replace(/^&/, '');
                }
                newScript.src = src;
                newScript.defer = script.defer;
                newScript.async = script.async;
                newScript.crossOrigin = script.crossOrigin;
              } else {
                newScript.textContent = script.textContent;
              }
              container.appendChild(newScript);
            });

            document.dispatchEvent(new CustomEvent('shopify:section:load', {
              detail: {
                sectionId: 'collection-featured-preview-{{ section.id }}'
              }
            }));
          })
          .catch(function () {
            container.innerHTML = '<p class="rte">Unable to load the collection preview. Filters remain hidden on the storefront.</p>';
          });
      })();
    </script>
  {% else %}
    {%- assign products_to_render = target_collection.products | slice: 0, section.settings.products_per_page -%}
    {% if products_to_render == blank or products_to_render.size == 0 %}
      <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
        <div class="loading-overlay gradient"></div>
        <div class="title-wrapper center">
          <h2 class="title title--primary">
            {{ 'sections.collection_template.empty' | t -}}
            <br>
            {{
              'sections.collection_template.use_fewer_filters_html'
              | t: link: target_collection.url, class: 'underlined-link link'
            }}
          </h2>
        </div>
      </div>
    {% else %}
      <div class="collection page-width">
        <div class="loading-overlay gradient"></div>
        <ul
          id="product-grid"
          data-id="{{ section.id }}"
          class="
            grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
            grid--{{ section.settings.columns_desktop }}-col-desktop
            {% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}
          "
        >
          {% assign skip_card_product_styles = false %}
          {%- for product in products_to_render -%}
            {% assign lazy_load = false %}
            {%- if forloop.index > 2 -%}
              {%- assign lazy_load = true -%}
            {%- endif -%}
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              lazy_load: lazy_load,
              skip_styles: skip_card_product_styles,
              quick_add: section.settings.quick_add,
              section_id: section.id
            %}
            {%- assign skip_card_product_styles = true -%}
          {%- endfor -%}
        </ul>

        {%- if target_collection.products_count > section.settings.products_per_page -%}
          <div class="collection__view-all center">
            <a
              href="{{ target_collection.url }}"
              class="button"
            >
              {{ 'sections.featured_collection.view_all' | t }}
            </a>
          </div>
        {%- endif -%}
      </div>
    {% endif %}
  {% endif %}
  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>

