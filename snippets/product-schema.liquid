<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "{{ product.title }}",
    "image": "{{ product.featured_image.src | image_url: '2048x2048' }}",
    "description": "{{ product.body | strip_html }}",
    "brand": {
      "@type": "Brand",
      "name": "{{ shop.name }}"
    },
    "offers": {
      "@type": "Offer",
      "priceCurrency": "{{  shop.currency }}",
      "price": "{{ product.variants.first.price | money_without_trailing_zeros }}",
      "availability": "{% if product.available %}In Stock{% else %}Out of Stock{% endif %}",
      "hasMerchantReturnPolicy": {
        "value": true
      }
    }
  }
</script>
