{% assign color_active = false %}
{% for option in card_product.options %}
  {% if option == 'Color' or option == 'Colour' %}
    {% assign color_active = true %}
    {% break %}
  {% endif %}
{% endfor %}
{{ color_filter_params | json }}
{{ color_filter_params.size }}
{% if card_product.variants.size > 1 and color_active == true and color_filter_param.size == 0 %}
  {% for option in card_product.options %}
    {% if option == 'Color' or option == 'Colour' %}
      {% assign index = forloop.index0 %}
      {% assign colorlist = '' %}
      {% assign color = '' %}
      {% for variant in card_product.variants %}
        {% capture color %}
      {{ variant.options[index] }}
      {% endcapture %}

        {% unless colorlist contains color %}
          {% assign lazy_load = false %}
          {%- if forloop.index > 2 -%}
            {%- assign lazy_load = true -%}
          {%- endif -%}
          <li
            class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {% render 'color-card-product',
              variant_sel: variant,
              card_product: card_product,
              media_aspect_ratio: media_aspect_ratio,
              image_shape: image_shape,
              show_secondary_image: show_secondary_image,
              show_vendor: show_vendor,
              show_rating: show_rating,
              lazy_load: lazy_load,
              quick_add: quick_add,
              section_id: section_id
            %}
          </li>
          {% capture tempList %}
        {{colorlist | append: color | append: " " }}
        {% endcapture %}
          {% assign colorlist = tempList %}
        {% endunless %}
      {% endfor %}
    {% endif %}
  {% endfor %}
{% else %}
  <li
    class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
      style="--animation-order: {{ forloop.index }};"
    {% endif %}
  >
    {% render 'card-product',
      card_product: card_product,
      media_aspect_ratio: media_aspect_ratio,
      image_shape: image_shape,
      show_secondary_image: false,
      show_vendor: show_vendor,
      show_rating: show_rating,
      lazy_load: lazy_load,
      quick_add: quick_add,
      section_id: section_id
    %}
  </li>
{% endif %}
